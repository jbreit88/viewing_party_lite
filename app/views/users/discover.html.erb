<h2>Discover Movies</h2>

<%= button_to 'Find Top Rated Movies', user_movies_path(@user), method: :get, params: {q: 'top_20_rated'} %>

<%= form_with url: user_movies_path(@user), method: :get, skip_enforcing_utf8: true, local: true do |f| %>
  <%= f.search_field :q, placeholder: 'Search by movie title' %>
  <%= f.submit 'Find Movies', name: nil %>
<% end %>